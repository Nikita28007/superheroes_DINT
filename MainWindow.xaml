<Window x:Class="superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:superheroes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl >
        <TabItem Header="Ver Superhéroes">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label  Content="Nombre Caracter" FontSize="20" FontFamily="Arial Black"></Label>
                <Image Grid.Column="1" Width="33" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right"></Image>
                <Image Grid.Column="0" Width="33" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Image>
                <Image Grid.Column="1" Width="33" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left"></Image>
            </Grid>
        </TabItem>

        <TabItem Header="Nuevo Superhéroe"></TabItem>

    </TabControl>
</Window>
